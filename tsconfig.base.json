{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@supremegaming/api/v1": ["libs/api/v1/src/index.ts"],
      "@supremegaming/api/v2": ["libs/api/v2/src/index.ts"],
      "@supremegaming/common/entities": ["libs/common/entities/src/index.ts"],
      "@supremegaming/common/entities/administration": ["libs/common/entities/administration/src/index.ts"],
      "@supremegaming/common/entities/ark": ["libs/common/entities/ark/src/index.ts"],
      "@supremegaming/common/entities/conan": ["libs/common/entities/conan/src/index.ts"],
      "@supremegaming/common/entities/servers": ["libs/common/entities/servers/src/index.ts"],
      "@supremegaming/common/entities/steam": ["libs/common/entities/steam/src/index.ts"],
      "@supremegaming/common/interfaces": ["libs/common/interfaces/src/index.ts"],
      "@supremegaming/common/ngx": ["libs/common/ngx/src/index.ts"],
      "@supremegaming/data-access": ["libs/data-access/src/index.ts"],
      "@supremegaming/discord/bootstrap": ["libs/discord/bootstrap/src/index.ts"],
      "@supremegaming/discord/community": ["libs/discord/community/src/index.ts"],
      "@supremegaming/discord/templates": ["libs/discord/templates/src/index.ts"],
      "@supremegaming/discord/ticket": ["libs/discord/ticket/src/index.ts"],
      "@supremegaming/pages/public": ["libs/pages/public/src/index.ts"],
      "@supremegaming/ui": ["libs/ui/src/index.ts"],
      "@supremegaming/utilities/database": ["libs/utilities/database/src/index.ts"],
      "@supremegaming/utilities/rcon": ["libs/utilities/rcon/src/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictTemplates": true
  },
  "exclude": ["node_modules", "tmp"]
}
